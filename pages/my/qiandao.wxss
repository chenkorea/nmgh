/* pages/my/qiandao.wxss */
.air_container {
  margin-top: 100rpx;
  width: 100%;
  padding: 10rpx;
  background-color: white;
  display: flex;
  flex-flow: row wrap;
  /* align-content: flex-start; */
  padding-top: 10rpx;
}

.mv_item {
  position: relative;
  box-sizing: border-box;
  background-color: white;
  flex: 50rpx 50rpx 20%;
  height: 140rpx;
  width: 100rpx;
  margin-top: 10rpx;
   border: 6px solid #FFF; 
}

.mv_pic
{
  position: relative;
  width: 100%;
  height: 100%;
}

.pic {
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  /* background: #F0F0F0; */
}

.date-text {
  position: absolute;
  left: 0;
  top: 100rpx;
  text-align: center;
  color: #333;
  font-size: 20rpx;
  width: 100%;
  height: 30rpx;
  margin-left: 15rpx;
}