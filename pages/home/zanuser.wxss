.user-view {
  position: relative;
  width: 100%;
  height: 120rpx;
  background: #FFF;
  border-bottom: 1rpx solid #F0F0F0;
}

.user-img {
  position: absolute;
  left: 20rpx;
  top: 15rpx;
  width: 90rpx;
  height: 90rpx;
  background: #F0F0F0;
  border-radius: 50%;
}

.user-text {
  position: absolute;
  left: 140rpx;
  top: 40rpx;
  width: 300rpx;
  height: 40rpx;
  text-align: left;
  font-size: 38rpx;
  color: #333;
  font-weight: 500;
}

.time-text {
  position: absolute;
  right: 20rpx;
  top: 40rpx;
  width: 300rpx;
  height: 40rpx;
  text-align: right;
  font-size: 30rpx;
  color: #999999;
}