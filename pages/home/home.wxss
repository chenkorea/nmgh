/* home.wxss */
.item-view {
  height: 140rpx;
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #E5E5E5;
}

.left-img {
  margin-top: 20rpx;
  margin-left: 10rpx;
  height: 100rpx;
  width: 180rpx;
  background: #F4F4F4;
  border: 1rpx solid #F2F2f2;
}

.right-view {
  margin-top: 20rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  width: 100%;
  float: left;
}

.title {
  width: 100%;
  height: 40rpx;
  font-size: 32rpx;
  color: #333333;
  margin-top: 10rpx;
}

.time {
  width: 100%;
  height: 40rpx;
  font-size: 24rpx;
  color: #777777;
  margin-top: 20rpx;
}

