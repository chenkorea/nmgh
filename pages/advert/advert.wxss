/* advert.wxss */
.main-view {
  background: #FFF;
}

.item-view {
  position: relative;
  margin: 20rpx 20rpx;
}

.top-view {
  width: 100%;
  height: 250rpx;
}

.ad-view {
   margin-top: 20rpx; 
}

.ad-img {
  width: 100%;
  height: 250rpx;
}

.line-view {
  position: absolute;
  width: 100%;
  height: 250rpx;
  left: 0;
  top: 0;
  /* 颜色渐变 从左往右 */
  background-image: -webkit-linear-gradient(right,rgba(90,133,167,0) 0%,rgba(90,133,167,1) 100%);
  background-image: -moz-linear-gradient(right,rgba(90,133,167,0) 0%,rgba(90,133,167,1) 100%);
  background-image: -o-linear-gradient(right,rgba(90,133,167,0) 0%,rgba(90,133,167,1) 100%);
  background-image: linear-gradient(right,rgba(90,133,167,0) 0%,rgba(90,133,167,1) 100%);
}

.title {
  position: absolute;
  top: 60rpx;
  display: flex;
  align-items: center;
  color: #FFF;
  font-size: 30rpx;
  font-weight: 700;
  width: 100%;
  height: 60rpx;
  padding-left: 10rpx;
}

.time-view {
  position: absolute;
  top: 120rpx;
  display: flex;
  align-items: center;
  color: #FFF;
  font-size: 20rpx;
  width: 100%;
  height: 60rpx;
  padding-left: 10rpx;
}

.null-view {
  width: 100%;
  height: 20rpx;
  background: #F0F0F0;
}

.null-view-o {
  width: 100%;
  height: 20rpx;
  background: #F0F0F0;
